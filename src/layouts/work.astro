---
import "../styles/global.css";
import Header from "../components/Header.astro";
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../config';
import Footer from '../components/Footer.astro';
import { WorkProps } from '../models';

const {
	content : { title, description, heroImage, category } 
} = Astro.props;

---
<html lang="es">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
  </head>
  <body>
    <Header />
     <div>
      {heroImage && (
        <img
          width={720}
					height={360}
					src={heroImage}
					alt={`${title}-hero`}
        />
      )}
      <p>{title}</p>
      <p>{description}</p>
      <p>{category}</p>
     </div>
    <Footer/>
  </body>
</html>
<style>
  body {
    margin: 0;
    padding: 0;
  }
</style>